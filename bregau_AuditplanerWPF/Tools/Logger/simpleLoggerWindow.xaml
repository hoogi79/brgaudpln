<Window x:Class="bregau_AuditplanerWPF.Tools.Logger.simpleLoggerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bregau_AuditplanerWPF.Tools.Logger"
        xmlns:ViewModel="clr-namespace:bregau_AuditplanerWPF.Tools.Logger"
        mc:Ignorable="d"
        Title="Logger" Height="200" Width="350"
        WindowChrome.ResizeGripDirection="BottomRight"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        >

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBox ScrollViewer.CanContentScroll="True" 
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Text="{Binding LogText}"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Löschen" Margin="2.5"  Width="75" Height="25"/>
            <Button Content="Schließen" Margin="2.5" Width="75" Height="25" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
