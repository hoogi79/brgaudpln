<Window x:Class="AuditPlaner2018.frmMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuditPlaner2018"
        mc:Ignorable="d"
        Title="{Binding WindowTitle, Mode=OneWay}" Height="600" Width="800"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="_Datei">
                <MenuItem Header="_Einstellungen" Click="MenuItem_Click" />
                <Separator />
                <MenuItem Header="_Beenden" />
            </MenuItem>
        </Menu>
        <ToolBar Grid.Row="1">
            <Button x:Name="btnToolTest" Content="Einstellungen" Width="100"/>
        </ToolBar>
        <StatusBar Grid.Row="3">
            <StatusBarItem>Willkommen zum Auditlog</StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
